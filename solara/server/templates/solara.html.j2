    <style id="pre-render-theme">
    .theme--light .v-sheet {
        background-color: #fff;
        border-color: #fff;
        color: rgba(0,0,0,.87)
    }

    .theme--dark .v-sheet {
        background-color: #1e1e1e;
        border-color: #1e1e1e;
        color: #fff
    }
</style>
    {% endblock header %}
